{
  "name": "spendless",
  "productName": "spendLess",
  "version": "0.3.0",
  "description": "Personal finance tracker built using electron",
  "main": "main.js",
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "db-server": "pouchdb-server -d data/",
    "coverage": "react-app-rewired test --coverage",
    "start": "concurrently 'npm run react-start' 'wait-on http://localhost:3000/ && npm run electron-start' 'npm run db-server'",
    "build": "npm run react-build && npm run electron-build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "react-start": "BROWSER=none react-app-rewired start",
    "electron-ts-compile": "tsc --lib 'es2015, dom' main.ts",
    "electron-start": "npm run electron-ts-compile && ELECTRON_IS_DEV=1 electron .",
    "react-build": "react-app-rewired build",
    "electron-build": "npm run electron-ts-compile && npm run macos-build",
    "macos-build": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/piggybank.icns --prune=true --out=release-builds",
    "prettier": "prettier --write './src/**/*.{ts,js,css,json}'",
    "precommit": "pretty-quick --staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joeynguyen/spendless.git"
  },
  "author": "Giao Nguyen",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/joeynguyen/spendless/issues"
  },
  "keywords": [
    "antd",
    "electron",
    "es6",
    "node",
    "pouchdb",
    "prettier",
    "react",
    "react-router",
    "redux",
    "typescript"
  ],
  "homepage": "./",
  "devDependencies": {
    "@types/enzyme": "3.1.14",
    "@types/enzyme-adapter-react-16": "1.0.3",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.1",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "babel-plugin-import": "1.9.1",
    "concurrently": "3.5.1",
    "electron": "3.0.6",
    "electron-devtools-installer": "2.2.4",
    "electron-packager": "12.2.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "enzyme-to-json": "3.3.4",
    "husky": "0.14.3",
    "pouchdb-server": "4.1.0",
    "prettier": "1.13.0",
    "pretty-quick": "1.6.0",
    "prop-types": "15.5.10",
    "react-app-rewired": "1.6.2",
    "react-perf-devtool": "3.1.8",
    "react-scripts": "2.1.0",
    "react-test-renderer": "16.6.0",
    "redux-logger": "3.0.6",
    "source-map-explorer": "1.6.0",
    "typescript": "3.1.4",
    "wait-on": "2.1.0"
  },
  "dependencies": {
    "antd": "3.10.3",
    "font-awesome": "4.7.0",
    "history": "4.6.1",
    "moment": "2.22.2",
    "pouchdb": "7.0.0",
    "pouchdb-find": "7.0.0",
    "react": "16.6.0",
    "react-collapse": "4.0.3",
    "react-dom": "16.6.0",
    "react-file-reader": "1.1.2",
    "react-motion": "0.5.2",
    "react-redux": "5.0.5",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-router-redux": "5.0.0-alpha.9",
    "redux": "3.5.2",
    "redux-thunk": "2.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "<rootDir>/main.ts",
      "!<rootDir>/node_modules/",
      "!<rootDir>/release-builds/",
      "!src/registerServiceWorker.ts"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "Chrome >= 66"
  ]
}
